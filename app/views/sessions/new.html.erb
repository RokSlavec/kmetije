<!DOCTYPE html>
<html>
	<head>
		<title>Slovenske kmetije</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<!--[if lt IE 9]>
			<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		<%= stylesheet_link_tag "main.css", :media => 'screen' %>
		<%= csrf_meta_tag %>
	</head>
	
	<body>
		<div id="header">
			<h1>SLOVENSKE KMETIJE</h1>
		</div>
		
		<div id="admin">
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
			<%= form_for(:sessions, :url => sessions_path) do |f| %>
				<%= f.label :name %><br />
				<%= f.text_field :name %>
				<%= f.label :password %><br />
				<%= f.password_field :password %>
				<%= f.submit "Vpis" %>
			<% end %>
		</div>
		
		<div id="navigation">
			<ul id="nav">
				<li><%= link_to "Domov", home_path(@home) %></li>				
				<li><%= link_to "Info", info_path(@info) %></li>
				<li><%= link_to "Vpis", signin_path(@signin) %></li>
			</ul>
		</div>
		
		<%= debug(params) if Rails.env.development? %>
		<%= javascript_include_tag "jquery-1.11.2.min.js" %>
		<%= javascript_include_tag "script.js" %>
	</body>
</html>
